<div class="relative overflow-x-auto">
  <table class="w-full whitespace-nowrap md:text-sm text-left text-gray-500 shadow-lg rounded-lg text-xs">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3">
                Titulo
            </th>
            <th scope="col" class="px-6 py-3">
                Tipo
            </th>
             <th scope="col" class="px-6 py-3">
                Valor
            </th>
             <th scope="col" class="px-6 py-3">
                Data
            </th>
             <th scope="col" class="px-6 py-3">
            </th>
            <th scope="col" class="px-6 py-3">
            </th>
        </tr>
    </thead>
    <tbody>
        <% @banks.each do |bank| %>
          <tr class="bg-white border-b">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                <%= bank.title %>
            </th>
         <td class="px-6 py-4">
            <%= bank.category.humanize.capitalize %>
          </td>
          <% if bank.category == 'entrada' %>
            <td class="px-6 py-4 text-green-500">
              + <%= number_to_currency(bank.amount) %>
            </td>
          <% else %>
            <td class="px-6 py-4 text-red-500">
              - <%= number_to_currency(bank.amount) %>
            </td>
          <% end %>
          <td class="px-6 py-4">
              <%= bank.created_at.strftime("%d/%m/%Y") %>
          </td>
            <td class="px-6 py-4 text-end">
              <%= link_to edit_bank_path(bank),
                class: 'font-semibold link-color hover:underline' do %>
                Atualizar
              <% end %>
            </td>
            <td class="px-6 py-4">
              <%= button_to bank_path(bank), method: :delete,
                class: 'text-red-500 hover:text-black hover:underline' do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
