<div class='px-2 py-5 sm:px-6'>
    <%= form_for @medicine, url: url, html: { class: 'space-y-6' }, data: { turbo: :false } do |f| %>
      <div class='px-3 mb-2'>
        <%= label_tag :name, 'Nome', class: 'block text-sm font-medium mb-2 ml-1 text-gray-700' %>
        <%= f.text_field :name,
                          autofocus: true,
                          required: true,
                          class: 'appearance-none block w-full px-3 py-2 border border-gray-300
                                  rounded-md shadow-sm mb-4 placeholder-gray-400 focus:outline-none
                                  focus:ring-orange-400 focus:border-orange-500 sm:text-sm' %>


        <%= f.label :quantity, 'Quantidade', class: 'block text-sm font-medium mb-2 ml-1 text-gray-700' %>
        <%= f.number_field :quantity,
                        autofocus: true,
                          class: 'appearance-none block w-full px-3 py-2 border border-gray-300
                          rounded-md shadow-sm mb-4 placeholder-gray-400 focus:outline-none
                          focus:ring-orange-400 focus:border-orange-500 sm:text-sm' %>

      <%= link_to "Voltar", medicines_path, class:"button-secondary" %>
      <%= f.submit "Concluido", class:"button-primary" %>
      </div>

    <% end %>
</div>
