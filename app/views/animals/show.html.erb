<div class="bg-gray-100">
 <div class="w-full text-white bg-main-color">
    <div class="container mx-auto my-5 p-5">
        <div class="md:flex no-wrap md:-mx-2 ">
            <div class="w-full md:w-3/12 md:mx-2 mb-2 ml-2">
                <div class="bg-white p-3 border-t-4 border-green-400">
                    <div class="image overflow-hidden text-black">
                        <% if @animal.photo.present? %>
                          <% ActiveStorage::Current.url_options = { host: request.base_url } %>
                          <%= image_tag @animal.photo.url, class: "min-w-full" %>
                        <% else %>
                          <%= image_tag("cachorro-sem-foto.png") %>
                        <% end %>
                    </div>
                    <h1 class="text-gray-900 font-bold text-xl leading-8 my-1"><%= @animal.name %></h1>
                    <p class="text-sm text-gray-500 hover:text-gray-600 leading-6"><%= @animal.description %></p>
                    <ul class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">

                      <% if @animal.available? %>
                          <li class="flex items-center py-3">
                              <span>Status</span>
                              <span class="ml-auto">
                                  <span class="bg-green-500 py-1 px-2 rounded text-white text-sm">Dispon√≠vel</span>
                              </span>
                          </li>
                          <li class="flex items-center py-3">
                              <span>Chegou em</span>
                              <span class="ml-auto"><%= @animal.created_at.strftime("%d/%m/%Y") %></span>
                          </li>
                      <% else %>
                          <li class="flex items-center py-3">
                              <span>Status</span>
                              <span class="ml-auto">
                                  <span class="bg-red-500 py-1 px-2 rounded text-white text-sm">Adotado</span>
                              </span>
                          </li>
                          <li class="flex items-center py-3">
                              <span>Adotado em</span>
                              <span class="ml-auto"><%= @animal.updated_at.strftime("%d/%m/%Y") %></span>
                          </li>
                      <% end %>
                    </ul>
                </div>
            </div>
            <div class="w-full md:w-9/12 mx-2 h-64">
                <div class="bg-white p-3 shadow-sm rounded-sm">
                    <div class="flex justify-between items-center space-x-2 font-semibold text-gray-900 leading-8">
                      <span class="tracking-wide ml-4 text-sm md:text-md">Sobre üêï</span>
                      <div class="flex items-center space-x-2">
                      <%= link_to "Alterar dados", edit_animal_path, class: "text-xs p-1.5 md:p-2 bg-black text-white rounded-lg text-center" %>
                      <% if @animal.available? %>
                        <%= button_to "Adicionar ado√ß√£o", adoption_animal_path(@animal), method: :patch, class: "text-xs p-2 bg-black text-white rounded-lg" %>
                      <% end %>
                      </div>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid md:grid-cols-1 text-sm">
                            <div class="flex">
                                <div class="px-4 py-2 font-semibold">Nome:</div>
                                <div class=" py-2"><%= @animal.name.humanize.capitalize %></div>
                            </div>
                            <div class="flex">
                                <div class="px-4 py-2 font-semibold">Ra√ßa:</div>
                                <div class="py-2"><%= @animal.race.humanize.capitalize %></div>
                            </div>
                            <div class="flex">
                                <div class="px-4 py-2 font-semibold">Sexo:</div>
                                <div class=" py-2"><%= @animal.gender.humanize.capitalize %></div>
                            </div>
                            <div class="flex">
                                <div class="px-4 py-2 font-semibold">Sa√∫de:</div>
                                <div class="py-2"><%= @animal.sick.humanize.capitalize %></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-4"></div>
                <div class="bg-white p-3 shadow-sm rounded-sm mb-2">
                    <div class="grid grid-cols-2">
                        <div>
                          <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                              <span class="tracking-wide">Medicamentos üíâ</span>
                          </div>
                          <ul class="list-inside space-y-2">
                            <li>
                                <div class="text-gray-500 text-sm"><%= simple_format(@animal.medicament) %></div>
                            </li>
                          </ul>
                        </div>
                        <div>
                          <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                            <span class="tracking-wide">Observa√ß√µes üìî</span>
                          </div>
                          <ul class="list-inside space-y-2">
                            <% if @animal.comment.present? %>
                              <li>
                                <div class="text-gray-500 text-sm"><%= simple_format(@animal.comment) %></div>
                              </li>
                              <% else %>
                                <li>
                                  <div class="text-gray-400">Nenhuma observa√ß√£o.</div>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
