<div class="bg-gray-100">
 <div class="w-full text-white bg-main-color">
    <div class="container mx-auto my-5 p-5">
      <div class="md:flex no-wrap md:-mx-2 ">
        <div class="w-full md:w-3/12 md:mx-2">
          <div class="bg-white p-3 border-t-4 border-green-400">
            <div class="image overflow-hidden text-black">
                <%= image_tag("user.png") %>
            </div>
            <h1 class="text-gray-900 font-bold text-xl leading-8 my-1"><%= @contact.full_name %></h1>
            <p class="text-sm text-gray-500 hover:text-gray-600 leading-6">CPF: <%= @contact.cpf %></p>
            <ul class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
              <li class="flex items-center py-3">
                <span>Cargo</span>
                <span class="ml-auto"><span class="bg-green-500 py-1 px-2 rounded text-white text-sm"><%= @contact.role.humanize.capitalize %></span></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="w-full md:w-9/12 mx-2 h-64">
          <div class="bg-white p-3 shadow-sm rounded-sm">
            <div class="flex justify-between items-center space-x-2 font-semibold text-gray-900 leading-8">
              <span class="tracking-wide ml-4">Sobre</span>
              <div>
                <%= link_to "Alterar dados", edit_contact_path, class: "text-xs p-2 bg-black text-white rounded-lg" %>
                <%= link_to "Voltar", contacts_path, class: "text-xs p-2 bg-black text-white rounded-lg" %>
              </div>
            </div>
            <div class="text-gray-700 text-sm">
              <div class="flex">
                  <div>
                      <div class="px-4  font-semibold">Nome:</div>
                      <div class="px-4"><%= @contact.first_name.humanize.capitalize %></div>
                  </div>
                  <div>
                      <div class="px-4 font-semibold">Sobrenome:</div>
                      <div class="px-4"><%= @contact.last_name.humanize.capitalize %></div>
                  </div>
                  <div>
                      <div class="px-4 font-semibold">CPF:</div>
                      <div class="px-4"><%= @contact.cpf %></div>
                  </div>
                  <div>
                      <div class="px-4 font-semibold">Telefone:</div>
                      <div class="px-4">(16) 99246-6915</div>
                  </div>
              </div>
            </div>
            <div class="my-4"></div>
            <div class="bg-white p-3 rounded-sm">
              <div class="grid grid-cols-2">
                <div>
                  <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                      <span class="tracking-wide">Endere√ßo üè†</span>
                  </div>
                  <% if @contact.address.present?%>
                    <ul class="list-inside space-y-2">
                      <div class="flex space-x-8">
                        <li>
                          <div class="text-teal-600">Rua</div>
                          <div class="text-gray-500 text-xs"><%= @contact.address.street.humanize.capitalize %></div>
                        </li>
                        <li>
                          <div class="text-teal-600">Numero</div>
                          <div class="text-gray-500 text-xs"><%= @contact.address.number.humanize.capitalize %></div>
                        </li>
                        <li>
                          <div class="text-teal-600">Cidade</div>
                          <div class="text-gray-500 text-xs"><%= @contact.address.city.humanize.capitalize %></div>
                        </li>
                      </div>
                    </ul>
                  <% else %>
                    <p class="text-gray-400">Nenhum endere√ßo adicionado</p>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
