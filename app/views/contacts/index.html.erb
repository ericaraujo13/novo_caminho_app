
<div class="w-full">
  <div class="flex justify-between bg-white items-center rounded-lg p-4 mb-4">
    <div>
      <h1 class="text-4xl font-bold ">ðŸ““ Agenda</h1>
    </div>
    <div class="">
      <%= link_to "Adicionar novo contato", new_contact_path, class: "button-primary" %>
    </div>
  </div>
  <div class="flex justify-beetween items-center ">
    <div>
        <%= paginate @contacts %>
    </div>
    <div class="ml-auto">
      <%= render 'search_input' %>
    </div>
  </div>
  <table class="w-full text-sm text-left text-gray-500 shadow-lg rounded-lg">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3">
                Nome
            </th>
            <th scope="col" class="px-6 py-3">
                Cpf
            </th>
            <th scope="col" class="px-6 py-3">
            </th>
          </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr class="bg-white border-b">
            <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                <%= contact.full_name %>
            </td>
            <td class="px-6 py-4">
                <%= contact.cpf %>
            </td>
            <td class="px-6 py-4 flex space-x-4">
              <%= link_to contact_path(contact),
                class: 'link-color hover:underline' do %>
                Visualizar
              <% end %>
              <%= button_to contact_path(contact), method: :delete,
                class: 'text-red-500 hover:text-black hover:underline' do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
